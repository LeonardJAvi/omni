.listing-show-header
	.actions
		- if can? :update, Excursion
			= link_to edit_admin_destination_excursion_path(@destination, @excursion), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%center.color-title= @excursion.title.to_s.humanize
		%center= image_tag @excursion.banner
		%table.bordered
			%tbody
				%tr
					%th.display-label= t("activerecord.attributes.id")
					%td.display-value.fs-body-1.tc-black-2= @excursion.id
				%tr
					%th.display-label= t("activerecord.attributes.title")
					%td.display-value.fs-body-1.tc-black-2= @excursion.title.blank? ? '----------' : @excursion.title
				%tr
					%th.display-label= t("activerecord.attributes.price")
					%td.display-value.fs-body-1.tc-black-2
						= @excursion.price.blank? ? '----------' : "$#{@excursion.price['cop']} COP / $#{@excursion.price['usd']} USD"
				%tr
					%th.display-label= t("activerecord.attributes.days")
					%td.display-value.fs-body-1.tc-black-2= @excursion.days.blank? ? '----------' : @excursion.days
				%tr
					%th.display-label= t("activerecord.attributes.url")
					%td.display-value.fs-body-1.tc-black-2= @excursion.url.blank? ? '----------' : "$#{@excursion.url['cop']} /\n $#{@excursion.url['usd']}"
				%tr
					%th.display-label= t("activerecord.attributes.destination_id")
					%td.display-value.fs-body-1.tc-black-2= @excursion.destination_id.blank? ? '----------' : @excursion.destination_id
		%table.bordered
			%tbody
				%td
					%center
						= link_to t('keppler.actions.back_history'), admin_destination_excursions_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
