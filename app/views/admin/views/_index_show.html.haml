.listing-show-header
	.actions
		- if can? :update, View
			= link_to edit_admin_view_path(@view), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%center.color-title= @view.name.to_s.humanize
		%center= image_tag @view.banner
		%table.bordered
			%tbody
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.id")
					%td
						.display-value.fs-body-1.tc-black-2= @view.id
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.name")
					%td
						.display-value.fs-body-1.tc-black-2= @view.name.blank? ? '----------' : @view.name
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.plan_ids")
					%td
						.display-value.fs-body-1.tc-black-2= @view.plan_ids.blank? ? '----------' : @view.plan_ids
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.active")
					%td
						.display-value.fs-body-1.tc-black-2= @view.active.blank? ? '----------' : @view.active
		%table.bordered
			%tbody
				%td
					%center
						= link_to t('keppler.actions.back_history'), admin_views_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
