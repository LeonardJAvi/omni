.listing-show-header
	.actions
		- if can? :update, Plan
			= link_to edit_admin_destination_plan_path(@destination, @plan), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%center.color-title= @plan.title.to_s.humanize
		%center= image_tag @plan.banner
		%table.bordered
			%tbody
				%tr
					%th.display-label= t("activerecord.attributes.id")
					%td.display-value.fs-body-1.tc-black-2= @plan.id
				%tr
					%th.display-label= t("activerecord.attributes.title")
					%td.display-value.fs-body-1.tc-black-2= @plan.title.blank? ? '----------' : @plan.title
				%tr
					%th.display-label= t("activerecord.attributes.price")
					%td.display-value.fs-body-1.tc-black-2
						= @plan.price.blank? ? '----------' : "$#{@plan.price['cop']} COP / $#{@plan.price['usd']} USD"
				%tr
					%th.display-label= t("activerecord.attributes.days")
					%td.display-value.fs-body-1.tc-black-2= @plan.days.blank? ? '----------' : @plan.days
				%tr
					%th.display-label= t("activerecord.attributes.url")
					%td.display-value.fs-body-1.tc-black-2= @plan.url.blank? ? '----------' : "$#{@plan.url['cop']} /\n $#{@plan.url['usd']}"
				%tr
					%th.display-label= t("activerecord.attributes.destination_id")
					%td.display-value.fs-body-1.tc-black-2= @plan.destination_id.blank? ? '----------' : @plan.destination_id
		%table.bordered
			%tbody
				%td
					%center
						= link_to t('keppler.actions.back_history'), admin_destination_plans_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
