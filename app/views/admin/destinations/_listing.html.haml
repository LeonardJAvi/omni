%tr{ id: "row-#{destination.id}" }
	- if can? :destroy_multiple, Destination
		%td.center.item-check{ width: 60 }
			= link_to '', admin_destination_path(destination), remote: true, class: 'show-row'
			%input{ type:'checkbox', class: 'filled-in', id: "checkbox-#{destination.id}", 'checklist-model'=>'check', 'checklist-value'=>"#{destination.id}", 'ng-click'=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{destination.id}" }

	%td.center
		= link_to '', admin_destination_path(destination, search: @query), remote: true, class: 'show-row'
		%span
			= image_tag destination.banner
	%td.center
		= link_to '', admin_destination_path(destination, search: @query), remote: true, class: 'show-row'
		%span
			= destination.name
	%td.center{ width: 60 }
		.action-btn.horizontal
			%a.btn-floating.btn-flat.right
				%i.material-icons.grey-text menu
			%ul.right.expanded-menu
				.icons.right
					- if can? :show, Destination
						%li.center
							= link_to admin_destination_path(destination), class: 'btn-floating waves-effect btn-flat tooltipped', title: t('keppler.actions.show') do
								= material_icon.md_24.remove_red_eye.css_class('md-dark')
					- if can? :update, Destination
						%li.center
							= link_to edit_admin_destination_path(destination.id), class: 'btn-floating waves-effect btn-flat tooltipped', title: t('keppler.actions.edit') do
								= material_icon.md_18.create.css_class('md-dark')
					- if can? :clone, Destination
						%li.center
							= link_to admin_destination_clone_path(destination), class: 'btn-floating waves-effect btn-flat tooltipped', title: t('keppler.actions.clone') do
								= material_icon.md_24.content_copy.css_class('md-dark')
					- if can? :delete, Destination
						%li.center{style:'padding-right: 20px'}
							= link_to admin_destination_path(destination.id), class: 'btn-floating waves-effect btn-flat tooltipped', title: t('keppler.actions.delete'), method: :delete, data: { confirm: t('keppler.messages.data_confirm') } do
								= material_icon.md_18.delete.css_class('md-dark')
	%td.center{ width: 60 }
		.action-btn.horizontal
			= link_to admin_destination_hotels_path(destination), class: 'btn-floating btn-flat tooltipped', title: 'Agregar hotel' do
				= material_icon.md_24.local_hotel.css_class('md-dark cursor icon')
	%td.center{ width: 60 }
		.action-btn.horizontal
			= link_to admin_destination_plans_path(destination), class: 'btn-floating btn-flat tooltipped', title: 'Agregar planes' do
				= material_icon.md_24.volume_up.css_class('md-dark cursor icon')
	%td.center{ width: 60 }
		.action-btn.horizontal
			= link_to admin_destination_excursions_path(destination), class: 'btn-floating btn-flat tooltipped', title: 'Agregar actividades' do
				= material_icon.md_24.map.css_class('md-dark cursor icon')


:scss
	.cursor{
		cursor: pointer;
	}
	.icon:hover {
		color: #15a656;
	}
