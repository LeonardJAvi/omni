.listing-show-header
	.actions
		- if can? :update, Destination
			= link_to edit_admin_destination_path(@destination.id), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%center.color-title= @destination.name.to_s.humanize
		%center= image_tag @destination.banner
		%table.bordered
			%tbody
				%tr
					%th.display-label.center Hoteles
					%th.display-label.center Planes
					%th.display-label.center Actividades
				%tr
					%td.display-value.fs-body-1.tc-black-2.center= @destination.hotels.count
					%td.display-value.fs-body-1.tc-black-2.center= @destination.plans.count
					%td.display-value.fs-body-1.tc-black-2.center= @destination.excursions.count

		.display-value.fs-body-1.tc-black-2.center= @destination.subtitle.blank? ? '----------' : @destination.subtitle
		%table.bordered
			%tbody
				%td
					%center
						= link_to t('keppler.actions.back_history'), admin_destinations_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
