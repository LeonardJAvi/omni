.wrapper
	.wrapper-body.container
		.actions
			= link_to admin_destinations_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.wrapper-inputs
			.card
				.card-content
					= simple_form_for [:admin, @destination] do |f|
						.row
							.col.s6
								= f.input :banner, :as => :file_material, label: false, wrapper_html: { class: "file-field" }
							.col.s6
								= f.input :cover, :as => :file_material, label: false, wrapper_html: { class: "file-field" }
							.col.s12
								= f.input :name
							.col.s12
								= f.input :subtitle, input_html: {class: "materialize-textarea"}
							.col.s12
								.form-actions.right
									= f.button :submit, t("keppler.actions.save"), name: '_save'
									= f.button :submit, t("keppler.actions.save_and_add_another"), name: '_add_other'


:javascript

	$('.destination_banner .btn span').text('Cover')
	$('.destination_cover .btn span').text('Banner')
